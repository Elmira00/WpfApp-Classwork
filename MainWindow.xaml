<Window x:Class="WpfApp48.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp48"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Name="myStackPanel" Background="AliceBlue" Orientation="Horizontal">
            
            <Button Name="redBtn" Click="Btn_Click" Background="Red"
               Content="Red" Height="200" Width="100" Margin="230,50,5,50"
                    FontSize="40"
                    >
            </Button>
            <Button Name="greenBtn" Click="Btn_Click" Background="Green"
               Content="Green" Height="200" Width="100" Margin="5,50,5,50"
                    FontSize="30"
                    >
            </Button>

            <Button Name="deepSkyBlueBtn" Click="Btn_Click" Background="DeepSkyBlue"
               Content="DeepSkyBlue" Height="200" Width="100" Margin="5,50,5,50"
                    FontSize="16"
                    >
                
            </Button>
            
        </StackPanel>
    </Grid>
</Window>
